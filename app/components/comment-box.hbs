{{#if boolean1}}
<div class="fulldiv">
         <div class="homeTittle">
                <div class="homeImage"></div>
                 <div class="homesearchIteam">
                <input type="text" placeholder="Search" class="searchbar">
                 <div class="searchBut" ></div>
                </div>
                <div class="homeIcons">
                  <LinkTo @route="index" class="image3"></LinkTo>
                  <div class="image4"></div>
                  <div class="image5"></div>
                </div>  
         </div>
 
    
      {{#if value2 }}
      <div class="commentPlace">
         {{#each comments as |postComment|}} 
          <div class="commentPlace">   
       
         <img  class="commentmainbox" src={{postComment.img}}>
        
               
                  <div class="userName">
                     {{postComment.name}}
                  </div> 
               {{#if (eq CurrentUserName "Admin")}}   
                  <div class="CdeleteIcon"  onclick={{action "delete" postComment}}></div>
                                             
                  {{else}}  
                  {{#if (eq postComment.name CurrentUserName)}} 
                     <div class="CdeleteIcon"  onclick={{action "delete"  postComment}}></div>
                  {{/if}} 
               {{/if}}                                          
               
               <div class="commentboxs">{{postComment.comment}}</div>                        
          </div>    
         {{/each}}
      </div>
      {{/if}}
   
   <Input class="commentTypeArea" placeholder="Type a Comment" type="text" @value={{value1}}/>
   <div class="Cdonebutton" onclick={{action "commentStore"}}></div>
   <button class="backbutton3" onclick={{action "back"}}>Back</button>
</div> 
{{/if}}
